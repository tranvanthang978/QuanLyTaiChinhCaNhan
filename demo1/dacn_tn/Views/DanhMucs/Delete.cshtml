@model dacn.Models.DanhMuc

@{
    string loai = Model?.Loai ?? "Thu";
    string title = loai == "Thu" ? "Khoản Thu" : "Khoản Chi";
    ViewBag.Title = "Xóa " + title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main id="main" class="main">
    <div class="pagetitle">
        <h1>Xóa @title</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="@Url.Action("Index", "TrangChu")">Trang chủ</a></li>
                <li class="breadcrumb-item"><a href="@Url.Action("Khoan" + loai, "DanhMucs")">@title</a></li>
                <li class="breadcrumb-item active">Xóa</li>
            </ol>
        </nav>
    </div>

    <section class="section">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title text-danger">Xác nhận xóa</h5>

                        <div class="alert alert-warning">
                            <h6 class="alert-heading"><i class="bi bi-exclamation-triangle"></i> Cảnh báo!</h6>
                            Bạn sắp xóa @title này. Hành động này không thể hoàn tác và sẽ xóa tất cả các giao dịch liên quan.
                        </div>

                        <div class="row mb-3">
                            <div class="col-lg-3 col-md-4 label">Tên danh mục</div>
                            <div class="col-lg-9 col-md-8"><strong>@Model.TenDanhMuc</strong></div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-lg-3 col-md-4 label">Loại</div>
                            <div class="col-lg-9 col-md-8">
                                <span class="badge @(loai == "Thu" ? "bg-success" : "bg-danger")">@Model.Loai</span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-lg-3 col-md-4 label">Tổng số giao dịch</div>
                            <div class="col-lg-9 col-md-8">
                                <span class="badge bg-info">@Model.GiaoDich.Count</span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-lg-3 col-md-4 label">Tổng số tiền</div>
                            <div class="col-lg-9 col-md-8">
                                <strong class="text-primary">@Model.GiaoDich.Sum(g => g.SoTien).ToString("#,##0") VNĐ</strong>
                            </div>
                        </div>

                        @using (Html.BeginForm("Delete", "DanhMucs", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            @Html.HiddenFor(model => model.MaDanhMuc)

                            <div class="text-center">
                                <button type="submit" class="btn btn-danger" onclick="return confirm('Bạn có chắc chắn muốn xóa?')">
                                    <i class="bi bi-trash"></i> Xác nhận xóa
                                </button>
                                <a href="@Url.Action("Khoan" + loai, "DanhMucs")" class="btn btn-secondary">Hủy bỏ</a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>