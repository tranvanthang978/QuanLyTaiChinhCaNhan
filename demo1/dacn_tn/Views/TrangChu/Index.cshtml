@model IEnumerable<dacn.Models.BaoCaoViewModel>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Index";
}


<main id="main" class="main">

    <div class="pagetitle">
        <h1>Trang chủ</h1>

    </div><!-- End Page Title -->

    <section class="section dashboard">
        <div class="row">

            <!-- Left side columns -->
            <div class="col-lg-8">
                <div class="row">


                    <!-- Card Tổng quan -->
                    <div class="col-lg-4">
                        <div class="card info-card revenue-card">
                            <div class="card-body">
                                <h5 class="card-title fs-6">Tiền ra </h5>
                                <h6 class="text-primary fs-6"> @((ViewBag.TongChi ?? 0).ToString("N0")) ₫</h6>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-4">
                        <div class="card info-card">
                            <div class="card-body">
                                <h5 class="card-title">Tiền vào</h5>
                                <h6 class="text-primary fs-6"> @((ViewBag.TongThu ?? 0).ToString("N0")) ₫</h6>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-4">
                        <div class="card info-card">
                            <div class="card-body">
                                <h5 class="card-title">Số dư</h5>
                                <h6 class="text-danger fs-6"> @((ViewBag.ChenhLech ?? 0).ToString("N0")) ₫</h6>
                            </div>
                        </div>
                    </div>

                    <!-- End Row -->
                    <!-- Reports -->
                    <div class="col-12">
                        <div class="card">

                            <div class="filter">
                                <a class="icon" href="#" data-bs-toggle="dropdown"><i class="bi bi-three-dots"></i></a>
                                <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow">
                                    <li class="dropdown-header text-start">
                                        <h6>Filter</h6>
                                    </li>

                                    <li><a class="dropdown-item" href="#">Today</a></li>
                                    <li><a class="dropdown-item" href="#">This Month</a></li>
                                    <li><a class="dropdown-item" href="#">This Year</a></li>
                                </ul>
                            </div>

                            <div class="card-body">
                                <h5 class="card-title">Báo cáo tháng này </h5>

                                <!-- Line Chart -->
                                <div id="reportsChart"></div>

                                <script>
                               document.addEventListener("DOMContentLoaded", () => {

                                    // Lấy dữ liệu từ ViewBag và parse sang JS
                                    var chartData = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(ViewBag.ChartData));

                                   

                                    var categories = chartData.map(x => x.NgayGD);
                                    var thuData = chartData.map(x => x.Thu);
                                    var chiData = chartData.map(x => x.Chi);

                                    new ApexCharts(document.querySelector("#reportsChart"), {
                                        series: [{
                                            name: 'Thu',
                                            data: thuData
                                        }, {
                                            name: 'Chi',
                                            data: chiData
                                        }],
                                        chart: {
                                            height: 350,
                                            type: 'area',
                                            toolbar: { show: false }
                                        },
                                        markers: { size: 4 },
                                        colors: ['#2eca6a', '#ff771d'],
                                        fill: {
                                            type: "gradient",
                                            gradient: { shadeIntensity: 1, opacityFrom: 0.3, opacityTo: 0.4, stops: [0, 90, 100] }
                                        },
                                        dataLabels: { enabled: false },
                                        stroke: { curve: 'smooth', width: 2 },
                                        xaxis: {
                                            type: 'category',
                                            categories: categories
                                        },
                                        tooltip: { x: { format: 'dd/MM' } }
                                    }).render();

                                });

                                </script>

                                <!-- End Line Chart -->

                            </div>

                        </div>
                    </div><!-- End Reports -->
                    <!-- Top Selling -->
                    <div class="col-12">
                        <div class="card top-selling overflow-auto">

                            

                            <div class="card-body pb-0">
                                <h5 class="card-title">Chi tiêu nhiều nhất </h5>

                                <table class="table table-borderless">
                                    <thead>
                                        <tr>

                                            <th scope="col">Nhóm</th>
                                            <th scope="col">Phần trăm</th>
                                            <th scope="col">Số Tiền </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{
                                            var topChi = ViewBag.TopChi as List<dacn.Models.TopChiViewModel>;
                                        }

                                        @if (topChi != null && topChi.Any())
                                        {
                                            foreach (var chi in topChi)
                                            {
                                                <tr>
                                                    <td>@chi.TenDanhMuc</td>
                                                    <td>@chi.PhanTram %</td>
                                                    <td>@String.Format("{0:N0} ₫", @chi.TongTien)</td>
                                                </tr>
                                            }
                                        }
                                        else
                                        {
                                            <tr>
                                                <td colspan="3">Không có dữ liệu</td>
                                            </tr>
                                        }

                                    </tbody>
                                </table>

                            </div>

                        </div>
                    </div><!-- End Top Selling -->

                </div>
            </div><!-- End Left side columns -->
            <!-- Right side columns -->
            <div class="col-lg-4">

                <!-- Recent Activity -->
                <div class="card">
                    

                    <div class="card-body">
                        <h5 class="card-title">Giao dịch gần đây</h5>

                        <div class="activity">

                            @{
                                var recentGiaoDich = ViewBag.RecentGiaoDich as List<dacn.Models.RecentActivityViewModel>;
                            }

                            <div class="activity">
                                @if (recentGiaoDich != null && recentGiaoDich.Any())
                                {
                                    foreach (var gd in recentGiaoDich)
                                    {
                                        <div class="activity-item d-flex">
                                            <div class="activite-label">
                                                @gd.NgayGD.ToString("dd/MM/yyyy")
                                            </div>
                                            <i class='bi bi-circle-fill activity-badge text-primary align-self-start'></i>
                                            <div class="activity-content">
                                                @gd.NoiDung
                                            </div>
                                        </div>
                                    }
                                }
                                else
                                {
                                    <div class="activity-item d-flex">
                                        <div class="activity-content">
                                            Không có giao dịch gần đây
                                        </div>
                                    </div>
                                }
                            </div>


                        </div>

                    </div>
                </div><!-- End Recent Activity -->





            </div><!-- End Right side columns -->

        </div>
    </section>

</main><!-- End #main -->



