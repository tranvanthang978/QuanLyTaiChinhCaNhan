<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <title>PocketMate</title>
    <meta content="" name="description">
    <meta content="" name="keywords">

    <!-- Favicons -->
    <link href="~/assets/img/logoP.png" rel="icon">
    <link href="~/assets/img/logoP.png" rel="apple-touch-icon">

    <!-- Google Fonts -->
    <link href="https://fonts.gstatic.com" rel="preconnect">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Nunito:300,300i,400,400i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">

    <!-- Vendor CSS Files -->
    <link href="~/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/assets/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
    <link href="~/assets/vendor/quill/quill.snow.css" rel="stylesheet">
    <link href="~/assets/vendor/quill/quill.bubble.css" rel="stylesheet">
    <link href="~/assets/vendor/remixicon/remixicon.css" rel="stylesheet">
    <link href="~/assets/vendor/simple-datatables/style.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <link href="~/Content/login.css" rel="stylesheet" />

    <!-- Template Main CSS File -->
    <link href="~/assets/css/style.css" rel="stylesheet">
</head>
<body>
    @if (Session["TenDangNhap"] != null)
    {



        <!-- ======= Header ======= -->
        <header id="header" class="header fixed-top d-flex align-items-center">

            <div class="d-flex align-items-center justify-content-between">
                <a href="@Url.Action("Index", "BaoCao")" class="logo d-flex align-items-center">
                    <img src="~/assets/img/logoP.png" alt="">
                    <span class="d-none d-lg-block">PocketMate</span>
                </a>
                <i class="bi bi-list toggle-sidebar-btn"></i>
            </div><!-- End Logo -->

            <div class="search-bar">
                <form class="search-form d-flex align-items-center" method="GET"
                      action="@Url.Action("Search", "GiaoDiches")">
                    <input type="text" name="query" placeholder="Tìm kiếm giao dịch..." title="Nhập từ khóa">
                    <button type="submit" title="Search"><i class="bi bi-search"></i></button>
                </form>
            </div>

            <nav class="header-nav ms-auto">
                <ul class="d-flex align-items-center">

                    <li class="nav-item d-block d-lg-none">
                        <a class="nav-link nav-icon search-bar-toggle " href="#">
                            <i class="bi bi-search"></i>
                        </a>
                    </li><!-- End Search Icon-->

                    @Html.Action("Notifications", "Shared")

                    <!-- End Notification Nav -->

                    <li class="nav-item dropdown">

                        <!-- Nút dấu cộng dẫn đến trang thêm giao dịch -->
                        <a href="@Url.Action("Create", "GiaoDiches")" class="add-btn">
                            +
                        </a>



                        <!-- End Messages Dropdown Items -->

                    </li><!-- End Messages Nav -->

                    <li class="nav-item dropdown pe-3">

                        <a class="nav-link nav-profile d-flex align-items-center pe-0" href="#" data-bs-toggle="dropdown">
                            <img src="~/assets/img/profile-img.jpg" alt="Profile" class="rounded-circle">
                            <span class="d-none d-md-block dropdown-toggle ps-2">@Session["HoTen"]</span>
                        </a><!-- End Profile Iamge Icon -->

                        <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow profile">
                            <li class="dropdown-header">
                                <h6>@Session["HoTen"]</h6>

                            </li>
                            <li>
                                <hr class="dropdown-divider">
                            </li>

                            <li>
                                <a class="dropdown-item d-flex align-items-center" href="users-profile.html">
                                    <i class="bi bi-person"></i>
                                    <span>My Profile</span>
                                </a>
                            </li>
                            <li>
                                <hr class="dropdown-divider">
                            </li>

                            <li>
                                <a class="dropdown-item d-flex align-items-center" href="sign_in.html">
                                    <i class="bi bi-gear"></i>
                                    <span>Account Settings</span>
                                </a>
                            </li>
                            <li>
                                <hr class="dropdown-divider">
                            </li>

                            <li>
                                <a class="dropdown-item d-flex align-items-center" href="pages-faq.html">
                                    <i class="bi bi-question-circle"></i>
                                    <span>Need Help?</span>
                                </a>
                            </li>
                            <li>
                                <hr class="dropdown-divider">
                            </li>

                            <li>
                                <a class="dropdown-item d-flex align-items-center" href="sign_in.html">
                                    <i class="bi bi-box-arrow-right"></i>
                                    <span>Sign Out</span>
                                </a>
                            </li>

                        </ul><!-- End Profile Dropdown Items -->
                    </li><!-- End Profile Nav -->

                </ul>
            </nav><!-- End Icons Navigation -->

        </header><!-- End Header -->

        var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
        var currentAction = ViewContext.RouteData.Values["action"]?.ToString();



        <!-- ======= Sidebar ======= -->
        <aside id="sidebar" class="sidebar">

            <ul class="sidebar-nav" id="sidebar-nav">

                <li class="nav-item">
                    <a class="nav-link @(currentController == "TrangChu" ? "active" : "collapsed")"
                       href="@Url.Action("Index", "TrangChu")">
                        <i class="bi bi-grid"></i>
                        <span>Trang chủ</span>
                    </a>
                </li><!-- End Dashboard Nav -->

                <li class="nav-item">
                    <a class="nav-link @(currentController == "GiaoDiches" || currentController == "BaoCao" ? "" : "collapsed")" data-bs-target="#components-nav" data-bs-toggle="collapse" href="#">
                        <i class="bi bi-menu-button-wide"></i><span>Giao Dịch</span><i class="bi bi-chevron-down ms-auto"></i>
                    </a>
                    <ul id="components-nav" class="nav-content collapse @(currentController == "GiaoDiches" || currentController == "BaoCao" ? "show" : "")" data-bs-parent="#sidebar-nav">
                        <li>
                            <a href="@Url.Action("Index", "GiaoDiches")" class="@(currentController == "GiaoDiches" ? "active fw-bold" : "")">
                                <i class="bi bi-circle"></i><span>Quản lý Giao dịch</span>
                            </a>
                        </li>
                        <li>
                            <a href="@Url.Action("Index", "BaoCao")" class="@(currentController == "BaoCao" ? "active fw-bold" : "")">
                                <i class="bi bi-circle"></i><span>Báo cáo và Thống kê</span>
                            </a>
                        </li>



                    </ul>
                </li><!-- End Components Nav -->

                <li class="nav-item">
                    <a class="nav-link @(currentController == "DanhMucs" ? "" : "collapsed")"
                       data-bs-target="#forms-nav" data-bs-toggle="collapse" href="#">
                        <i class="bi bi-journal-text"></i><span>Quản lý Danh mục</span>
                        <i class="bi bi-chevron-down ms-auto"></i>
                    </a>
                    <ul id="forms-nav" class="nav-content collapse @(currentController == "DanhMucs" ? "show" : "")" data-bs-parent="#sidebar-nav">
                        <li>
                            <a href="@Url.Action("KhoanChi", "DanhMucs")" class="@(currentController == "DanhMucs" && currentAction == "KhoanChi" ? "active fw-bold" : "")">
                                <i class="bi bi-circle"></i><span>Khoản Chi</span>
                            </a>
                        </li>
                        <li>
                            <a href="@Url.Action("KhoanThu", "DanhMucs")" class="@(currentController == "DanhMucs" && currentAction == "KhoanThu" ? "active fw-bold" : "")">
                                <i class="bi bi-circle"></i><span>Khoản Thu</span>
                            </a>
                        </li>


                    </ul>
                </li><!-- End Forms Nav -->

                <li class="nav-item">
                    <a class="nav-link @(currentController == "NganSach" ? "active fw-bold" : "collapsed")" href="@Url.Action("Index", "NganSach")">
                        <i class="bi bi-person"></i>
                        <span>Quản lý Ngân sách</span>
                    </a>
                </li><!-- End Profile Page Nav -->




                <li class="nav-item">
                    <a class="nav-link @(currentController == "NguoiDungs" ? "active fw-bold" : "collapsed")" href="@Url.Action("DangNhap", "NguoiDungs")">
                        <i class="bi bi-box-arrow-in-right"></i>
                        <span>Login</span>
                    </a>
                </li><!-- End Login Page Nav -->

            </ul>

        </aside><!-- End Sidebar-->
    }



    @RenderBody()




    <hr />


    <!-- ======= Footer ======= -->
    <footer id="footer" class="footer">
        <div class="copyright">
            Chào mừng đến với <strong><span>PocketMate</span></strong>.
        </div>

    </footer><!-- End Footer -->

    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

    <!-- Vendor JS Files -->
    <script src="~/assets/vendor/apexcharts/apexcharts.min.js"></script>
    <script src="~/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/assets/vendor/chart.js/chart.umd.js"></script>
    <script src="~/assets/vendor/echarts/echarts.min.js"></script>
    <script src="~/assets/vendor/quill/quill.js"></script>
    <script src="~/assets/vendor/simple-datatables/simple-datatables.js"></script>
    <script src="~/assets/vendor/tinymce/tinymce.min.js"></script>
    <script src="~/assets/vendor/php-email-form/validate.js"></script>

    <!-- Template Main JS File -->

    <script src="@Url.Content("~/assets/js/main.js")"></script>

    @RenderSection("Scripts", required: false)

</body>
</html>
