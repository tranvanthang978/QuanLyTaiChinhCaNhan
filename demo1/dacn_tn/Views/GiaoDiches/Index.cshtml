@model dacn.Controllers.GiaoDichFilterViewModel

@{
    ViewBag.Title = "Quản lý Giao Dịch";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main id="main" class="main">
    <div class="pagetitle">
        <h1>Quản lý Giao Dịch</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="@Url.Action("Index", "TrangChu")">Trang chủ</a></li>
                <li class="breadcrumb-item active">Giao Dịch</li>
            </ol>
        </nav>
    </div>

    <section class="section">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Danh Sách Giao Dịch</h5>

                        <p>
                            @Html.ActionLink("Thêm giao dịch mới", "Create", null, new { @class = "btn btn-primary btn-sm" })
                        </p>

                        <!-- Form lọc giao dịch -->
                        <form method="get" class="row g-3 mb-3">
                            <div class="col-auto">
                                @Html.TextBox("tuNgay", Model.TuNgay?.ToString("yyyy-MM-dd"), new { @class = "form-control", type = "date" })
                            </div>
                            <div class="col-auto">
                                @Html.TextBox("denNgay", Model.DenNgay?.ToString("yyyy-MM-dd"), new { @class = "form-control", type = "date" })
                            </div>
                            <div class="col-auto">
                                <select name="loai" class="form-select">
                                    <option value="">-- Loại giao dịch --</option>
                                    <option value="Thu" @(Model.LoaiGiaoDich == "Thu" ? "selected" : "")>Thu</option>
                                    <option value="Chi" @(Model.LoaiGiaoDich == "Chi" ? "selected" : "")>Chi</option>
                                </select>
                            </div>
                            <div class="col-auto">
                                <button type="submit" class="btn btn-primary">Lọc</button>
                            </div>
                        </form>
                        @if (!string.IsNullOrEmpty(Model.Query))
                        {
                            <div class="alert alert-info">
                                Kết quả tìm kiếm cho: <strong>@Model.Query</strong>
                            </div>
                        }
                        <table class="table table-striped table-hover datatable">
                            <thead>
                                <tr>
                                    <th>Tên danh mục</th>
                                    <th>Ghi chú</th>
                                    <th>Thời gian</th>
                                    <th class="text-end">Giá tiền</th>
                                    <th class="text-center">Thao tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.GiaoDiches)
                                {
                                    <tr>
                                        <td>@item.DanhMuc.TenDanhMuc</td>
                                        <td>@item.MoTa</td>
                                        <td>@item.NgayGD.ToString("dd/MM/yyyy")</td>
                                        <td class="text-end fw-bold">@String.Format("{0:N0}", item.SoTien) VNĐ</td>
                                        <td class="text-center">
                                            @Html.ActionLink("Sửa", "Edit", new { id = item.MaGiaoDich }, new { @class = "btn btn-outline-info btn-sm" })
                                            @Html.ActionLink("Chi tiết", "Details", new { id = item.MaGiaoDich }, new { @class = "btn btn-outline-secondary btn-sm" })
                                            @Html.ActionLink("Xóa", "Delete", new { id = item.MaGiaoDich }, new { @class = "btn btn-outline-danger btn-sm" })
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
        </div>
    </section>
</main>
